<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <RadioGroup
        android:id="@+id/fio_objective_radio_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp">

        <RadioButton
            android:id="@+id/fio_option1_radioButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:layout_weight="0"
            android:buttonTint="@color/colorBackgroundPrimary" />

        <RadioButton
            android:id="@+id/fio_option2_radioButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_weight="0"
            android:buttonTint="@color/colorBackgroundPrimary" />

        <RadioButton
            android:id="@+id/fio_option3_radioButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_weight="0"
            android:buttonTint="@color/colorBackgroundPrimary" />

        <RadioButton
            android:id="@+id/fio_option4_radioButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_weight="0"
            android:buttonTint="@color/colorBackgroundPrimary" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fio_option1_editText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorBackgroundPrimary"
            android:ems="10"
            android:hint="Option A"
            android:inputType="textPersonName"
            android:textColor="@color/colorWhite"
            android:textColorHint="#20000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/fio_option2_editText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorBackgroundPrimary"
            android:ems="10"
            android:hint="Option B"
            android:inputType="textPersonName"
            android:textColor="@color/colorWhite"
            android:textColorHint="#20000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/fio_option3_editText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorBackgroundPrimary"
            android:ems="10"
            android:hint="Option C"
            android:inputType="textPersonName"
            android:textColor="@color/colorWhite"
            android:textColorHint="#20000000"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/fio_option4_editText"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:backgroundTint="@color/colorBackgroundPrimary"
            android:ems="10"
            android:hint="Option D"
            android:inputType="textPersonName"
            android:textColor="@color/colorWhite"
            android:textColorHint="#20000000"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>